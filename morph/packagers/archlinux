#!/bin/sh

package() { 
    workdir=$(mktemp -d /tmp/morph-mpkg.XXXXXXXX)
    cd $workdir

    cp -R $pkgdir/* .

    cat > .PKGINFO <<HERE
# Generated by morph
pkgname = $name
pkgver = $version
pkgdesc = $description
packager = $maintainer_name
size = $(du .)"
HERE
    pkgfile=$package_out_dir/$name-$version-$arch-$mbuild.pkg.tar.xz
    tar cJf $pkgfile *
    rm -rf $workdir
}

